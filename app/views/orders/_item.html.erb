<tr>
  <td>
    <%= image_tag product.image.tiny.url %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td class="money-format">
      <%= product.price %>
  </td>
  <td>
    <div>
    <%= quantity %>
    </div>
  </td>
  <td class="money-format">
    <%= product.price * quantity %>
  </td>
</tr>